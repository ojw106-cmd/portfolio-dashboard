generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id           String        @id @default(cuid())
  accountId    String        @unique
  name         String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  cashHoldings CashHolding[]
  realizedPnL  RealizedPnL[]
  portfolio    Stock[]
  trades       Trade[]
}

model Stock {
  id           String   @id @default(cuid())
  accountId    String
  market       String
  sector       String
  code         String
  name         String
  targetWeight Float    @default(0)
  buyPrice     Float    @default(0)
  currentPrice Float    @default(0)
  holdingQty   Float    @default(0)
  memo         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  account      Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, code, market])
}

model CashHolding {
  id           String   @id @default(cuid())
  accountId    String
  market       String
  amount       Float    @default(0)
  targetWeight Float    @default(0)
  memo         String?
  updatedAt    DateTime @updatedAt
  account      Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, market])
}

model Trade {
  id         String   @id @default(cuid())
  accountId  String
  date       DateTime @default(now())
  type       String
  market     String?
  code       String?
  name       String?
  price      Float?
  qty        Float?
  amount     Float?
  pnl        Float?
  buyPrice   Float?
  direction  String?
  fromAmount Float?
  toAmount   Float?
  rate       Float?
  createdAt  DateTime @default(now())
  account    Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
}

model RealizedPnL {
  id        String   @id @default(cuid())
  accountId String
  market    String
  amount    Float    @default(0)
  updatedAt DateTime @updatedAt
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, market])
}

model JournalEntry {
  id        String   @id @default(cuid())
  date      String   @unique
  content   String
  important Boolean  @default(false)
  updatedAt DateTime @updatedAt
}

model ExchangeRate {
  id        String   @id @default(cuid())
  currency  String   @unique
  rate      Float
  updatedAt DateTime @updatedAt
}

model Sector {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  color     String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Snapshot {
  id               String   @id @default(cuid())
  date             DateTime @default(now())
  totalAsset       Float
  totalAssetChange Float    @default(0)
  jinwonAsset      Float    @default(0)
  jinwonChange     Float    @default(0)
  dadAsset         Float    @default(0)
  dadChange        Float    @default(0)
  lionAsset        Float    @default(0)
  lionChange       Float    @default(0)
  exchangeRate     Float    @default(1400)
  memo             String?
  createdAt        DateTime @default(now())
}

model ResearchFolder {
  id        String          @id @default(cuid())
  name      String
  sortOrder Int             @default(0)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  stocks    ResearchStock[]
}

model ResearchStock {
  id        String          @id @default(cuid())
  folderId  String?
  ticker    String
  name      String
  market    String
  content   String          @default("")
  sortOrder Int             @default(0)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  folder    ResearchFolder? @relation(fields: [folderId], references: [id])

  @@unique([ticker, market])
}
